<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="700" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Oeuvre.MarketController">


    <children>

        <BorderPane layoutX="6.0" prefHeight="200.0" prefWidth="200.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <VBox prefHeight="3000.0" prefWidth="435.0" styleClass="right-bar"
                      stylesheets="@/styles/styles1.css" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="110.0" prefWidth="300.0" spacing="15" style="-fx-padding: 0 0 0 30;">
                            <!-- Logo with subtle shadow and hover effect -->
                            <ImageView fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true"
                                       styleClass="logo-image">
                                <image>
                                    <Image url="@/images/artflow-logo.png" />
                                </image>
                                <HBox.margin>
                                    <Insets bottom="5" />
                                </HBox.margin>
                                <effect>
                                    <DropShadow color="rgba(0,0,0,0.15)" radius="8" spread="0.3" />
                                </effect>
                            </ImageView>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="200.0"
                              stylesheets="@/styles/market.css" VBox.vgrow="NEVER">
                            <VBox.margin>
                                <Insets left="30.0" right="30.0" />
                            </VBox.margin>
                            <children>
                                <TextField fx:id="searchField" prefHeight="40.0" prefWidth="235.0"
                                           promptText="Search artworks" styleClass="transparent"
                                           stylesheets="@/styles/market.css">
                                    <HBox.margin>
                                        <Insets left="20.0" />
                                    </HBox.margin>
                                    <font>
                                        <Font name="Cambria" size="18.0" />
                                    </font>
                                </TextField>
                                <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0"
                                        styleClass="search-button" stylesheets="@/styles/market.css"
                                        text="Search" textFill="WHITE" />
                            </children>
                            <styleClass>
                                <String fx:value="search-box" />
                                <String fx:value="shadow" />
                            </styleClass>
                        </HBox>
                        <Pane prefHeight="57.0" prefWidth="435.0" VBox.vgrow="ALWAYS" />
                        <VBox fx:id="chosenArtworkCard" alignment="CENTER" prefHeight="535.0"
                              prefWidth="100.0" stylesheets="@/styles/market.css">
                            <VBox.margin>
                                <Insets left="50.0" right="50.0" />
                            </VBox.margin>
                            <children>
                                <HBox prefHeight="60.0" prefWidth="335.0">
                                    <children>
                                        <Label fx:id="artworkNameLabel" prefHeight="48.0" prefWidth="276.0"
                                               text="Artwork Name" textFill="WHITE">
                                            <font>
                                                <Font name="Cambria" size="36.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <VBox.margin>
                                        <Insets left="20.0" top="30.0" />
                                    </VBox.margin>
                                </HBox>
                                <ImageView fx:id="artworkImg" fitHeight="250.0" fitWidth="285.0"
                                           pickOnBounds="true" preserveRatio="true">
                                    <VBox.margin>
                                        <Insets top="20.0" />
                                    </VBox.margin>
                                </ImageView>
                                <Label fx:id="artworkDescriptionLabel" prefHeight="100.0" prefWidth="300.0"
                                       text="Artwork description goes here..." textFill="WHITE"
                                       wrapText="true">
                                    <font>
                                        <Font name="Cambria" size="16.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets left="20.0" right="20.0" top="20.0" />
                                    </VBox.margin>
                                </Label>
                                <HBox alignment="CENTER" prefHeight="53.0" prefWidth="335.0">
                                    <children>
                                        <Label fx:id="likesLabel" prefHeight="53.0" prefWidth="167.0"
                                               text="❤ 0" textFill="WHITE">
                                            <font>
                                                <Font name="Cambria Bold" size="24.0" />
                                            </font>
                                        </Label>
                                        <Button fx:id="likeButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0"
                                                styleClass="add-btn" stylesheets="@/styles/market.css"
                                                text="Like" textFill="#828282">
                                            <font>
                                                <Font name="System Bold" size="14.0" />
                                            </font>
                                        </Button>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="20.0" top="20.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                            <styleClass>
                                <String fx:value="chosen-artwork-card" />
                                <String fx:value="shadow" />
                            </styleClass>
                        </VBox>
                        <Pane prefHeight="57.0" prefWidth="435.0" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </left>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" spacing="20" prefHeight="65.0" prefWidth="200.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <children>
                                <Label prefHeight="29.0" prefWidth="88.0" text="Filter:" textFill="#878787">
                                    <font>
                                        <Font name="Cambria Bold" size="18.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="categoryFilter" prefWidth="150.0" promptText="All Categories"
                                          styleClass="comboBox" stylesheets="@/styles/market.css" />

                                <Pane prefHeight="65.0" prefWidth="393.0" HBox.hgrow="ALWAYS" />

                                <Button fx:id="addOeuvreButton" mnemonicParsing="false" onAction="#handleAddOeuvre"
                                        prefHeight="35.0" prefWidth="140.0" styleClass="add-btn"
                                        stylesheets="@/styles/market.css" text="Add Artwork">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0">
                                            <image>
                                                <Image url="@/images/icons8-add.gif" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Pane prefHeight="84.0" prefWidth="96.0" />
                                <!-- Dans la section des info-cards -->
                                <HBox fx:id="viewCategoriesCard" alignment="CENTER" prefHeight="100.0" prefWidth="380.0"
                                      styleClass="info-card" stylesheets="@/styles/market.css">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="214.0">
                                            <children>
                                                <Label text="View Available Categories" textFill="#878787">
                                                    <font>
                                                        <Font name="Cambria Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Label text="Browse all categories" textFill="#878787">
                                                    <font>
                                                        <Font name="Cambria" size="15.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <ImageView fitHeight="40.0" fitWidth="40.0"
                                                   pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@/images/icons8-exposition-50.png" />
                                            </image>
                                        </ImageView>
                                    </children>

                                </HBox>
                                <Pane prefHeight="84.0" prefWidth="96.0" HBox.hgrow="ALWAYS" />
                                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="336.0"
                                      styleClass="info-card" stylesheets="@/styles/market.css">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="203.0">
                                            <children>
                                                <Label prefHeight="29.0" prefWidth="190.0" text="Artists"
                                                       textFill="#878787">
                                                    <font>
                                                        <Font name="Cambria Bold" size="18.0" />
                                                    </font>
                                                </Label>
                                                <Label prefHeight="20.0" prefWidth="207.0"
                                                       text="Meet our talented artists" textFill="#878787">
                                                    <font>
                                                        <Font name="Cambria" size="15.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/images/icons8-artist-50.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </HBox>
                                <Pane prefHeight="84.0" prefWidth="96.0" />
                            </children>
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="10.0" />
                            </VBox.margin>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <children>
                                <ScrollPane fx:id="scroll" prefHeight="570.0" prefWidth="785.0"
                                            styleClass="transparent" stylesheets="@/styles/market.css">
                                    <content>
                                        <GridPane fx:id="grid" prefHeight="0.0" prefWidth="0.0">
                                            <rowConstraints>
                                                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                                            </rowConstraints>
                                        </GridPane>
                                    </content>
                                    <HBox.margin>
                                        <Insets top="10.0" />
                                    </HBox.margin>
                                </ScrollPane>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>

</AnchorPane>