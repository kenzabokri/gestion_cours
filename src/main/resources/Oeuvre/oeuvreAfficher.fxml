<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/fxml/1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Oeuvre.OeuvreAfficherController">

    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Détails de l'œuvre" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <ImageView fx:id="imageView" fitWidth="400" fitHeight="300" preserveRatio="true"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="nomLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="descriptionLabel" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date de création:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="dateLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Catégorie:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="categorieLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Signature:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="signatureLabel" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Likes:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <Label fx:id="likesLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Fermer" onAction="#handleClose" style="-fx-padding: 5 20 5 20;">
            <VBox.margin>
                <Insets top="20"/>
            </VBox.margin>
        </Button>
        <HBox spacing="20" alignment="CENTER">
            <Button text="Modifier" onAction="#handleModifier" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20 5 20;"/>
            <Button text="Supprimer" onAction="#handleSupprimer" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 20 5 20;"/>
            <Button text="Fermer" onAction="#handleClose" style="-fx-padding: 5 20 5 20;"/>
        </HBox>
    </VBox>
</AnchorPane>