<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Oeuvre.OeuvreListController"
            styleClass="root">
    <VBox spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20"
          AnchorPane.bottomAnchor="20" styleClass="vbox">

        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="header-box">
            <Label fx:id="welcomeLabel" text="Gestion des Œuvres" styleClass="header-label" />
            <HBox spacing="10" styleClass="button-group">
                <Button onAction="#handleRefresh" text="Actualiser" styleClass="action-button" />
                <Button onAction="#handleAddOeuvre" text="Nouvelle Œuvre" styleClass="primary-button" />
            </HBox>
        </HBox>

        <!-- Table Section -->
        <VBox spacing="10" styleClass="table-container">
            <TableView fx:id="tableView" styleClass="data-table">
                <columns>
                    <TableColumn fx:id="idCol" prefWidth="60" text="ID" styleClass="table-column" />
                    <TableColumn fx:id="nomCol" prefWidth="180" text="Nom" styleClass="table-column" />
                    <TableColumn fx:id="descriptionCol" prefWidth="300" text="Description" styleClass="table-column" />
                    <TableColumn fx:id="dateCol" prefWidth="120" text="Date" styleClass="table-column" />
                    <TableColumn fx:id="categorieCol" prefWidth="150" text="Catégorie" styleClass="table-column" />
                    <TableColumn fx:id="likesCol" prefWidth="80" text="Likes" styleClass="table-column" />
                    <TableColumn fx:id="actionCol" prefWidth="180" text="Actions" styleClass="table-column" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </VBox>

    <!-- CSS Styling -->
    <stylesheets>
        <URL value="@../styles/custom-gallery.css" />
    </stylesheets>
</AnchorPane>