<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.publicationsandcomments.AddPublicationController">

    <VBox alignment="TOP_CENTER" spacing="10.0">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Ajouter une publication"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label text="Nom de la publication :" />
        <TextField fx:id="nomField" promptText="Nom..." />

        <Label text="Contenu :" />
        <TextArea fx:id="contenuArea" promptText="Contenu..." prefRowCount="5"/>

        <Label text="Image (chemin ou URL) :" />
        <TextField fx:id="imageField" promptText="ex: image.jpg ou https://..." />

        <Label text="Date de crÃ©ation :" />
        <DatePicker fx:id="datePicker" />

        <Button fx:id="addButton"
                text="Ajouter"
                onAction="#handleAdd"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>