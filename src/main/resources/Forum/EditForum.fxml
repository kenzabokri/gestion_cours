<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.Forum.EditForumController" stylesheets="@/dashboard.css">
    <children>
        <Label layoutX="30" layoutY="20" text="Nom Forum"/>
        <TextField fx:id="nomForumField" layoutX="150" layoutY="15" prefWidth="200"/>

        <Label layoutX="30" layoutY="60" text="Thème"/>
        <TextField fx:id="themeForumField" layoutX="150" layoutY="55" prefWidth="200"/>

        <Label layoutX="30" layoutY="100" text="Description"/>
        <TextArea fx:id="descriptionForum" layoutX="150" layoutY="95" prefWidth="200" prefHeight="60"/>

        <Label layoutX="30" layoutY="170" text="Date Création"/>
        <DatePicker fx:id="dateCreationForumPicker" layoutX="150" layoutY="165" prefWidth="200"/>

        <Label layoutX="30" layoutY="210" text="Image"/>
        <TextField fx:id="imageForumField" layoutX="150" layoutY="205" prefWidth="200"/>

        <Button layoutX="150" layoutY="260" text="Sauvegarder" onAction="#saveChanges"/>
    </children>
</AnchorPane>