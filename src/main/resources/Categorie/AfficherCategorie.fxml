<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.effect.DropShadow?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.Categorie.AfficherCategorieController"
            stylesheets="@/styles/chic-theme.css"
            styleClass="chic-beige">

    <!-- Top: Navbar fixe -->
    <top>
        <fx:include source="/Oeuvre/Navbar.fxml" fx:id="navbar"/>
    </top>

    <!-- Centre: Contenu principal -->
    <center>
        <VBox spacing="25.0" styleClass="main-container">
            <!-- Titre avec ombre port√©e -->
