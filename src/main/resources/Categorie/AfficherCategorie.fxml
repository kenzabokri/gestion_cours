                </effect>
            </Text>

            <!-- Tableau avec style chic -->
            <TableView fx:id="tableView" styleClass="chic-table">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" styleClass="chic-column"/>
                    <TableColumn fx:id="nomCol" text="Nom" styleClass="chic-column"/>
                    <TableColumn fx:id="styleCol" text="Style" styleClass="chic-column"/>
                    <TableColumn fx:id="techniqueCol" text="Technique" styleClass="chic-column"/>
                    <TableColumn fx:id="actionCol" text="Actions" styleClass="chic-column-action"/>
                </columns>
            </TableView>

            <!-- Container pour les boutons -->
            <VBox spacing="10" styleClass="button-container">
                <Button onAction="#redirectToAddCategory" styleClass="chic-button">
                    <graphic>
                        <Text text="+" styleClass="button-icon"/>
                    </graphic>
                    Ajouter une Cat√©gorie
                </Button>

                <Button onAction="#redirectToAddOeuvre" styleClass="chic-button">
