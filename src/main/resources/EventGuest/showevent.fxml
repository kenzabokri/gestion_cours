<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Event.ShowEventController">
    <VBox spacing="20" layoutX="20" layoutY="20" prefWidth="760">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Liste des Événements" textAlignment="CENTER">
                <font>
                    <Font size="32.0" name="System Bold" />
                </font>
            </Text>
        </HBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <TextField fx:id="searchField" onKeyReleased="#onSearch" promptText="Rechercher un événement..." 
                      style="-fx-background-radius: 10; -fx-padding: 8 15; -fx-font-size: 14;" 
                      prefWidth="300"/>
        </HBox>

        <TableView fx:id="eventTable" prefHeight="400.0" prefWidth="760.0" style="-fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="nomColumn" prefWidth="120" text="Nom" />
                <TableColumn fx:id="dateColumn" prefWidth="120" text="Date" />
                <TableColumn fx:id="localisationColumn" prefWidth="140" text="Localisation" />
                <TableColumn fx:id="statutColumn" prefWidth="100" text="Statut" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200" text="Description" />
                <TableColumn fx:id="colActions" prefWidth="80" text="Actions" />
            </columns>
        </TableView>

        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="btnStat" onAction="#showStat" text="Voir Statistiques" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20; -fx-font-size: 14;"/>
            <Button fx:id="backButton" onAction="#goBackToAddEvent" text="Retour" 
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 8 20; -fx-font-size: 14;"/>
        </HBox>
    </VBox>
</AnchorPane>
