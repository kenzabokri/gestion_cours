<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<ScrollPane fitToWidth="true" style="-fx-background: #f5f6fa; -fx-background-color: #f5f6fa;" 
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.Event.AddEventController">
    <AnchorPane prefWidth="1000.0" style="-fx-background-color: #f5f6fa;" stylesheets="@/dashboard.css">
        <VBox spacing="25" layoutX="50" layoutY="30" prefWidth="900" style="-fx-padding: 0 0 30 0;">
            <!-- Header Section -->
            <HBox spacing="20" alignment="CENTER_LEFT" styleClass="card">
                <VBox>
                    <Text styleClass="title" text="Nouvel Événement"/>
                    <Text styleClass="subtitle" text="Créez et gérez vos événements"/>
                </VBox>
            </HBox>

            <!-- Form Section -->
            <VBox spacing="20" styleClass="card">
                <!-- Event Name -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Nom de l'événement" styleClass="form-label"/>
                    <TextField fx:id="nomEventField" promptText="Entrez le nom de l'événement"
                             styleClass="form-input"/>
                </VBox>

                <!-- Event Date -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Date de l'événement" styleClass="form-label"/>
                    <DatePicker fx:id="dateEventPicker" promptText="Sélectionnez une date"
                              styleClass="form-input"/>
                </VBox>

                <!-- Location -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Localisation" styleClass="form-label"/>
                    <TextField fx:id="localisationField" promptText="Entrez le lieu de l'événement"
                             styleClass="form-input"/>
                </VBox>

                <!-- Status -->
                <VBox spacing="10" styleClass="form-group">
                    <Label text="Statut de l'événement" styleClass="form-label"/>
                    <fx:define>
                        <ToggleGroup fx:id="statusToggleGroup"/>
                    </fx:define>
                    <HBox spacing="20">
                        <RadioButton fx:id="termineRadio" text="Terminé" 
                                   toggleGroup="$statusToggleGroup" styleClass="radio-button"/>
                        <RadioButton fx:id="bientotCommenceeRadio" text="Bientôt commencé" 
                                   toggleGroup="$statusToggleGroup" styleClass="radio-button"/>
                        <RadioButton fx:id="encoursRadio" text="En cours" 
                                   toggleGroup="$statusToggleGroup" styleClass="radio-button"/>
                    </HBox>
                </VBox>

                <!-- Image Selection -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Image de l'événement" styleClass="form-label"/>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="imageField" promptText="Sélectionnez une image"
                                 styleClass="form-input" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="parcourirButton" onAction="#parcourirImage" text="📷 Parcourir"
                                styleClass="btn-primary"/>
                    </HBox>
                </VBox>

                <!-- Description -->
                <VBox spacing="5" styleClass="form-group">
                    <Label text="Description" styleClass="form-label"/>
                    <TextArea fx:id="descriptionArea" promptText="Décrivez votre événement..."
                             styleClass="form-textarea" prefRowCount="4" wrapText="true"/>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
                <Button fx:id="showEventButton" onAction="#goToShowEvent" text="🗂️ Liste des événements"
                        styleClass="btn-secondary"/>
                <Button fx:id="ajouterButton" onAction="#ajouterEvent" text="✨ Créer l'événement"
                        styleClass="btn-success"/>
            </HBox>
        </VBox>
    </AnchorPane>
</ScrollPane>
