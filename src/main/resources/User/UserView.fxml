<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.shape.Circle?>
<AnchorPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.User.UserViewController"
            prefWidth="1200.0" prefHeight="800.0"
            stylesheets="@/dashboard.css">

    <VBox AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

        <!-- Top Navigation Bar -->
        <HBox styleClass="top-nav" alignment="CENTER_LEFT" spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <!-- Logo -->
            <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                <Image url="@/uploads/logo2.jpg"/>
            </ImageView>

            <!-- Navigation Buttons -->
            <Button text="My Profile" fx:id="profileButton" styleClass="nav-button"/>
            <Button text="My Events" fx:id="eventsButton" styleClass="nav-button"/>
            <Button text="My Gallery" fx:id="galleryButton" styleClass="nav-button"/>

            <Region HBox.hgrow="ALWAYS"/> <!-- Spacer -->

            <!-- User Info and Logout -->
            <HBox alignment="CENTER" spacing="10">
                <Label fx:id="userNameLabel" styleClass="user-name"/>
                <ImageView fx:id="userImage" fitHeight="45" fitWidth="45"
                           preserveRatio="true" styleClass="user-avatar">
                    <clip>
                        <Circle radius="22.5" centerX="22.5" centerY="22.5"/>
                    </clip>
                </ImageView>
                <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
            </HBox>
        </HBox>

        <!-- Main Content Area -->
        <VBox spacing="20" styleClass="main-content">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Info Container -->
            <VBox styleClass="info-container" spacing="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <!-- Clock and User Login Labels -->
                <Label fx:id="clockLabel" styleClass="info-label"/>
                <Label fx:id="userLoginLabel" styleClass="info-label"/>
            </VBox>

            <!-- Profile Section -->
            <VBox styleClass="profile-container" spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <Label text="My Profile" styleClass="section-title"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Edit Profile" onAction="#handleEditProfile"
                            styleClass="edit-profile-button"/>
                </HBox>

                <HBox spacing="20" alignment="CENTER_LEFT">
                    <ImageView fx:id="profileImage" fitHeight="150" fitWidth="150"
                               styleClass="profile-image" preserveRatio="true"/>
                    <VBox spacing="10">
                        <Label fx:id="nameLabel" styleClass="info-label"/>
                        <Label fx:id="emailLabel" styleClass="info-label"/>
                        <Label fx:id="roleLabel" styleClass="info-label"/>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Content Area for Dynamic Content -->
            <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS"/>
        </VBox>
    </VBox>
</AnchorPane>